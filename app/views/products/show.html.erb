<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="text-center justify-content mt-5 col-12 col-lg-8">
      <h1><strong>Show Product</strong></h1>

      <p>Name: <%= @product.name %></p>
      <p>Description: <%= @product.description %></p>
      <p>Price: <%= @product.price %></p>

      <div class="d-flex mt-5 mb-2 justify-content-center">
        <%= link_to "Edit Your Product", edit_product_path, class: "btn btn-primary" %>
        <%= link_to "Delete This Product", @product, class: "btn btn-danger ms-2", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" } %>
      </div>

      <div class="d-flex mb-2 justify-content-center">
        <%= link_to "Back to Products", products_path, class: "btn btn-primary" %>
        <% if @product.rents.count.zero? %>
          <%= simple_form_for [@product, @rent] do |f| %>
            <%= f.submit "Rent", class: "btn btn-primary ms-2"%>
          <% end %>
        <% else %>
          <h4 class="ms-2">Product Unavailable</h4>
        <% end %>
      </div>
    </div>
  </div>
</div>
