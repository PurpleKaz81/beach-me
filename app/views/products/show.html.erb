<div class="container p-5">
  <div class="text-center justify-content mt-5">
    <h1><strong>Show Product</strong></h1>

    <p>Name: <%= @product.name %></p>
    <p>Description: <%= @product.description %></p>
    <p>Price: <%= @product.price %></p>
  </div>
  <div class="text-center justify-content">
    <%= link_to "Rent", "https://blog.vindi.com.br/wp-content/uploads/2020/11/image-18-1024x463.png", :target => "_blank", class: "btn btn-primary" %>
    <%= link_to "Edit Your Product", edit_product_path, class: "btn btn-primary" %>
    <%= link_to "Delete This Product", @product, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" } %>
    <%= link_to "Back to Products", products_path, class: "btn btn-primary" %>
  </div>
</div>
